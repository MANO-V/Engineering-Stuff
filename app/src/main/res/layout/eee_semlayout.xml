<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".eee_semlayout"
    tools:openDrawer="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_container1">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="38sp"
            android:layout_height="35sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:elevation="10sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/semsesters"
            android:background="?attr/colorPrimary"
            app:layout_constraintCircleRadius="100dp">


            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="eee_trans"
                android:background="@drawable/eee_top" />





            /// Electrical And Electronics Engineering

            <TextView
                android:id="@+id/text_eee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:text="Electrical And \nElectronics Engineering"
                android:textColor="?attr/colorwhitetext"
                android:textSize="25dp" />



            <FrameLayout
                android:id="@+id/papers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_eee"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_nd_dark_background"/>





            <ImageView
                android:id="@+id/outer_sem"
                android:transitionName="eee_design_shape"
                android:layout_width="60dp"
                android:layout_height="300dp"
                android:scrollbarSize="0dp"
                android:layout_below="@+id/text_eee"
                android:layout_marginTop="100dp"
                android:background="@drawable/outer"
                />



            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="60dp"
                android:layout_height="220dp"
                android:layout_below="@+id/text_eee"
                android:layout_marginTop="140dp"
                android:scrollbarSize="0dp"
                android:scrollbars="none"
                android:requiresFadingEdge="vertical"
                android:fadingEdgeLength="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    // sem1
                    <Button
                        android:id="@+id/eee_sem1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/whiteshape"
                        android:text="Sem 1"
                        android:textSize="10dp"/>



                    // sem2
                    <Button
                        android:id="@+id/eee_sem2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/whiteshape"
                        android:text="Sem 2"
                        android:textSize="10dp" />



                    // sem3
                    <Button
                        android:id="@+id/eee_sem3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/whiteshape"
                        android:text="Sem 3"
                        android:textSize="10dp" />


                    // sem4
                    <Button
                        android:id="@+id/eee_sem4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/whiteshape"
                        android:text="Sem 4"
                        android:textSize="10dp" />


                    // sem5
                    <Button
                        android:id="@+id/eee_sem5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/whiteshape"
                        android:text="Sem 5"
                        android:textSize="10dp" />

                    // sem6
                    <Button
                        android:id="@+id/eee_sem6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/whiteshape"
                        android:text="Sem 6"
                        android:textSize="10dp" />

                    // sem7
                    <Button
                        android:id="@+id/eee_sem7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/whiteshape"
                        android:text="Sem 7"
                        android:textSize="10dp" />


                    // sem8
                    <Button
                        android:id="@+id/eee_sem8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/whiteshape"
                        android:text="Sem 8"
                        android:textSize="10dp" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </FrameLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="?attr/colortextalter"
        android:background="?attr/colorwhitebackground">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>




