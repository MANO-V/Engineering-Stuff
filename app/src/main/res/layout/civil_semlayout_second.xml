<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/semsesters"
    android:background="?attr/colourbackground_civil">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="5sp"
        android:layout_marginBottom="40sp"
        android:background="@drawable/white_nd_dark_background"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="60sp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Civil Engineering"
        android:paddingHorizontal="20sp"
        android:textAlignment="center"
        android:textColor="?attr/colortextalter"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="150sp"
        android:background="@drawable/civil_shape" />


    /// Semesters

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="160sp"
        android:layout_marginLeft="40sp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Semesters"
        android:textColor="?attr/colorwhitetext"
        android:textSize="25sp" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="150sp"
        android:scrollbarSize="0sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">


            // sem1
            <Button
                android:id="@+id/civil_sem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="65sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/whitebutton"
                android:paddingHorizontal="25sp"
                android:paddingVertical="50sp"
                android:text="Sem 1"
                android:textSize="14sp" />



            // sem2
            <Button
                android:id="@+id/civil_sem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="65sp"
                android:background="@drawable/whitebutton"

                android:paddingHorizontal="25sp"
                android:paddingVertical="50sp"
                android:text="Sem 2"
                android:textSize="14sp" />



            // sem3
            <Button
                android:id="@+id/civil_sem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="65sp"
                android:background="@drawable/whitebutton"
                android:paddingHorizontal="25sp"
                android:paddingVertical="50sp"
                android:text="Sem 3"
                android:textSize="14sp" />



            // sem4
            <Button
                android:id="@+id/civil_sem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="65sp"
                android:background="@drawable/whitebutton"
                android:paddingHorizontal="25sp"
                android:paddingVertical="50sp"
                android:text="Sem 4"
                android:textSize="14sp" />



            // sem5
            <Button
                android:id="@+id/civil_sem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="65sp"
                android:background="@drawable/whitebutton"

                android:paddingHorizontal="25sp"
                android:paddingVertical="50sp"
                android:text="Sem 5"
                android:textSize="14sp" />



            // sem6
            <Button
                android:id="@+id/civil_sem6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="65sp"
                android:background="@drawable/whitebutton"

                android:paddingHorizontal="25sp"
                android:paddingVertical="50sp"
                android:text="Sem 6"
                android:textSize="14sp" />



            // sem7
            <Button
                android:id="@+id/civil_sem7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="65sp"
                android:background="@drawable/whitebutton"

                android:paddingHorizontal="25sp"
                android:paddingVertical="50sp"
                android:text="Sem 7"
                android:textSize="14sp" />



            // sem8
            <Button
                android:id="@+id/civil_sem8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="65sp"
                android:layout_marginRight="30sp"
                android:background="@drawable/whitebutton"

                android:paddingHorizontal="25sp"
                android:paddingVertical="50sp"
                android:text="Sem 8"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/papers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="450sp"
        android:layout_marginHorizontal="10sp"
        android:layout_marginBottom="40sp"
        android:background="?attr/colorwhitebackground" />








</RelativeLayout>