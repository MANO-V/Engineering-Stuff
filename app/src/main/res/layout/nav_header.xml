<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176sp"
    android:background="@drawable/nav_gradient_main"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16sp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100sp"
        android:layout_height="76sp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/book_white"/>

        <ImageView
            android:id="@+id/kiot_logo"
            android:layout_width="100sp"
            android:layout_height="76sp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/kiot_logo" />

</RelativeLayout>



    <TextView
        android:id="@+id/appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colortextalter"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:autoLink="all"
        android:text="engineeringstuff7@gmail.com"
        android:textColor="?attr/colortextalter"/>
</LinearLayout>

